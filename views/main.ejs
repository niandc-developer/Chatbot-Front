<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%= app_name %></title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="lib/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="css/common.css">
</head>
<body>
	<header>
		<nav class="navbar navbar-inverse bg-inverse navbar-fixed-top">
			<span class="navbar-brand"><%= app_name %></span>
		</nav>
	</header>
	<div class="container chat-window">
		<div class="chat-box">
			<div class="chat-box--pane">
				<div style="height: 40%; visibility: hidden;"></div>
				<!-- adding extra space hack -->
				<div id="loader" class="loader">
					<div><img src="images/loading.gif" width="50" alt=""></div>
				</div>
			</div>
		</div>

		<input type="text" placeholder="メッセージを入力ください" value="" autocomplete="off" class="chat-window-input chat-window--message-input base--text-input">
	</div>

	<div id="template">
		<div class="chat-box--item_WATSON chat-box-item chat-box--item_HIDDEN">
			<div class="chat-message chat-message-output">
				<div class="img-container">
					<img src="images/icon.svg">
				</div>
				<div class="message-container">
					<div class="message"><p></p></div>
				</div>
			</div>
		</div>

		<div class="chat-box--item_YOU chat-box-item chat-box--item_HIDDEN text-right">
			<div class="chat-message">
				<div class="chat-message-input">
					<div class="message"><p></p></div>
				</div>
			</div>
		</div>
	</div>

	<input type="hidden" id="session_id" value="<%= sid %>"></input>

	<script type="text/javascript" src="lib/js/jquery-1.12.4.min.js"></script>
	<script type="text/javascript" src="lib/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="js/talk.js"></script>
	<script type="text/javascript" src="js/view.js"></script>
	<script type="text/javascript" src="js/main.js"></script>
</body>
</html>
